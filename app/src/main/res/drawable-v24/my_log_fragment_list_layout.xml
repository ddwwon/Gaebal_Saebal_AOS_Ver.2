<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="@color/main_blue"
                android:endColor="@color/main_purple" />
            <corners android:radius="70sp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />
            <corners android:radius="70sp" />
        </shape>
    </item>
</layer-list>